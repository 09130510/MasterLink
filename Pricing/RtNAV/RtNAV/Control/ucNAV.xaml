<UserControl x:Class="RtNAV.Control.ucNAV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RtNAV.Control"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="0,0,-20,0">
            <Label Content="Channel" FontFamily="Courier New" Background="#FFB4B4B4" BorderThickness="1" Width="Auto" />
            <TextBox Name="txtChannel" Width="85" FontFamily="Courier New"></TextBox>
            <Label  Content="Limit" FontFamily="Courier New" Background="#FFB4B4B4" BorderThickness="1" Width="Auto" />
            <TextBox Name="txtDiffLimitt" Width="85" FontFamily="Courier New"/>
            <xctk:ColorPicker Name="cpAlert" Width="40"></xctk:ColorPicker>
            
        </StackPanel>

    </Grid>
</UserControl>
